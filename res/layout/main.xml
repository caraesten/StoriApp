<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AllStories"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ImageView android:id="@+id/imageView1" android:src="@drawable/storitell_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="10dp"></ImageView>
 <ListView android:id="@android:id/list" android:layout_width="fill_parent"
  android:smoothScrollbar="true"
  android:fastScrollEnabled="false" android:clickable="true"
  android:layout_marginBottom="0dp" android:layout_height="0px" android:layout_weight="1.0"/>
 <LinearLayout android:layout_width="match_parent" android:paddingTop="5dp" android:id="@+id/linearLayout1" android:layout_height="45dp" android:layout_gravity="bottom">
     <Button android:layout_height="wrap_content" android:text="Previous" android:id="@+id/prev_page" android:layout_gravity="left" android:layout_weight="1" android:layout_width="0dp"></Button>
     <Button android:layout_height="wrap_content" android:layout_gravity="right" android:text="Next" android:id="@+id/next_page" android:layout_weight="1" android:layout_width="0dp"></Button>
 </LinearLayout>
</LinearLayout>
